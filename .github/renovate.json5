{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:recommended',
    'schedule:daily',
  ],
  baseBranches: [
    'main',
  ],
  commitMessageSuffix: ' in {{ packageFile }}',
  labels: [
    'dependencies',
    'go',
  ],
  packageRules: [
    {
      matchPackageNames: [
        'go',
        'golang',
      ],
      versioning: 'go',
      groupName: 'go',
    },
  ],
  postUpdateOptions: [
    'gomodTidy',
    'gomodUpdateImportPaths',
  ],
}
